<% if @survey_resposne.q3 == "error" %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      Please answer the question
    </div>
<% end %>

<div class="page-header">
  <h4>What type of smartphone do you have? iPhone, Android, Other</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/q4" method="get">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for q3 -->
          <div class="radio">
            <label><input type="radio" id="q3" name="q3" value = "iPhone">iPhone</label>
          </div>
          <div class="radio">
            <label><input type="radio" id="q3" name="q3" value = "Android" >Android</label>
          </div>
          <div class="radio">
            <label><input type="radio" id="q3" name="q3" value = "Other" >Other</label>
          </div>

      <input type="hidden" name="survey_id" value="<%=@survey_resposne.id %>">

      <button class="btn btn-success">
        Next Question
      </button>
    </form>
  </div>
</div>
