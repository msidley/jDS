<% if @survey_resposne.q2 == "error" %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      Please answer the question
    </div>
<% end %>

<div class="page-header">
  <h4>Does your smartphone have an Internet data connection?</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/q3" method="get">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for q2 -->
          <div class="radio">
            <label><input type="radio" id="q2" name="q2" value = "no">No</label>
          </div>
          <div class="radio">
            <label><input type="radio" id="q2" name="q2" value = "yes" >Yes</label>
          </div>

      <input type="hidden" name="survey_id" value="<%=@survey_resposne.id %>">

      <button class="btn btn-success">
        Next Question
      </button>
    </form>
  </div>
</div>
