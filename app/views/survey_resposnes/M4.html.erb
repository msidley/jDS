<% if @survey_resposne.M4 == "error" %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      Please answer the question
    </div>
<% end %>

<div class="page-header">
  <h4>In the last 3 months, did you have eating binges as often as once a week?</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/M5" method="get">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for M4 -->
          <div class="radio">
            <label><input type="radio" id="M4" name="M4" value = "no">No</label>
          </div>
          <div class="radio">
            <label><input type="radio" id="M4" name="M4" value = "yes" >Yes</label>
          </div>


      <input type="hidden" name="survey_id" value="<%=@survey_resposne.id %>">

      <button class="btn btn-success">
        Next Question
      </button>
    </form>
  </div>
</div>
